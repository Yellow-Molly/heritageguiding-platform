# App
NODE_ENV=development
NEXT_PUBLIC_URL=http://localhost:3000

# Database (Supabase PostgreSQL)
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres?pgbouncer=true
DATABASE_URL=postgresql://user:password@localhost:5432/heritageguiding

# Payload CMS
# Generate with: openssl rand -base64 32
PAYLOAD_SECRET=your-secret-key-minimum-32-characters-change-me

# Vercel Blob Storage (for media uploads)
# Get from Vercel Dashboard > Storage > Blob
BLOB_READ_WRITE_TOKEN=

# Bokun Booking API (Phase 8.1)
# Get from Bokun Dashboard > API Settings
BOKUN_API_KEY=your-bokun-access-key
BOKUN_SECRET_KEY=your-bokun-secret-key
# Webhook secret for signature verification
BOKUN_WEBHOOK_SECRET=your-webhook-secret-for-validation
# Booking channel UUID (public - exposed to browser for widget)
NEXT_PUBLIC_BOKUN_UUID=your-booking-channel-uuid

# Email (Resend)
RESEND_API_KEY=
EMAIL_FROM=bookings@heritageguiding.com

# Analytics (optional)
NEXT_PUBLIC_GA_ID=

# i18n
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=sv,en,de
